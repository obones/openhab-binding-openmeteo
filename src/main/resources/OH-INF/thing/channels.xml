	<channel-type id="humidity">
		<item-type>Number:Dimensionless</item-type>
		<label>@text/channel-type.openmeteo.forecast.humidity.label</label>
		<category>Humidity</category>
		<tags>
			<tag>Measurement</tag>
			<tag>Humidity</tag>
		</tags>
		<state pattern="%.1f %%" readOnly="true"/>
